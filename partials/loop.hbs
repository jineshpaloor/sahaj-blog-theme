{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <div class="blog-excerpt-author">
        {{#if author.image}}<img class="author-blog" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
    </div>
    <div class="blog-excerpt">
        <footer class="post-meta">
	    {{author}}
	    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
	    <a class="lm10" href="{{url}}#disqus_thread">Comments</a>
        </footer>
        <header class="post-header">
	    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        </header>
        <section class="post-excerpt">
	    <p>{{excerpt words="100"}}</p>
            <div class="tm10"> <a class="read-more" href="{{url}}">Continue Reading...</a> </div>
        </section>
    </div>
    <div class="cleared"></div>
</article>
{{/foreach}}

